{
  "name": "@maksimr/ui",
  "version": "0.0.19",
  "main": "./src/index.js",
  "files": [
    "package.json",
    "dist/"
  ],
  "scripts": {
    "start": "webpack-dev-server -d --disable-host-check --history-api-fallback --host 0.0.0.0 --public $SANDBOX_URL",
    "build": "webpack -p",
    "build:pkg": "tsc --project tsconfig.build.json --declaration --outDir dist --noEmit false",
    "bump": "npm version patch -m 'bump: version to %s' && git push && git push --tags",
    "prepbump": "npm run build:pkg",
    "test": "jest --passWithNoTests",
    "test:e2e": "karma start ./test/e2e/karma.config.js",
    "test:type": "tsc",
    "lint": "eslint lib/ src/ test/"
  },
  "dependencies": {},
  "devDependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "typescript": "4.1.3",
    "@types/jest": "26.0.19",
    "@types/jasmine": "3.6.2",
    "@types/react": "17.0.0",
    "@babel/core": "7.12.10",
    "@babel/preset-env": "7.12.10",
    "@babel/preset-react": "7.12.10",
    "@babel/eslint-parser": "7.12.1",
    "babel-loader": "8.2.2",
    "css-loader": "5.0.1",
    "html-webpack-plugin": "4.5.0",
    "webpack": "5.10.1",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0",
    "eslint": "7.15.0",
    "eslint-plugin-react": "7.21.5",
    "jest": "26.6.3",
    "@jest/globals": "26.6.2",
    "jest-cli": "26.6.3",
    "karma": "5.2.3",
    "karma-chrome-launcher": "3.1.0",
    "karma-jasmine": "4.0.1",
    "puppeteer": "5.5.0",
    "jest-image-snapshot": "4.2.0"
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false,
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "jest": true,
      "jasmine": true,
      "describe": true,
      "it": true,
      "beforeEach": true,
      "beforeAll": true,
      "afterEach": true,
      "expect": true,
      "expectAsync": true
    },
    "rules": {
      "react/jsx-uses-vars": 2,
      "react/jsx-uses-react": 2,
      "no-undef": "error",
      "semi": "error",
      "no-unused-vars": "error",
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false,
          "requireParamDescription": false,
          "requireReturnDescription": false
        }
      ]
    }
  }
}
